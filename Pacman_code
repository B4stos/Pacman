<script type="text/javascript">

    var config = {
        type: Phaser.AUTO,
        width: 800,
        height: 600,
        physichs: {
            default: 'arcade',
            arcade: {
                gravity: { y:300 },
                debug: false
            }
        },
        scene: {
            preload: preload,
            create: create,
            update: update
        }
    };

    var character;


    var game = new Phaser.Game(config);

    function preload ()
    {
        this.load.image('mapa', 'assets/Mapa.png');
        this.load.image('vermelho', 'assets/Vermelho.png');
        this.load.image('azul', 'assets/Azul.png');
        this.load.image('rosa', 'assets/Rosa.png');
        this.load.image('laranja', 'assets/Laranja.png');
        this.load.image('Fantasma_assustado', 'assets/GhostFear.png');
        this.load.image('Fantasma_morto', 'assets/DeadGhost.png');
        this.load.image('pacman', 'assets/pacman_sprites.png');
    }

    function create ()
    {
        this.add.image(400, 300, 'mapa');

        
    }

    function update ()
    {
    }

</script>

